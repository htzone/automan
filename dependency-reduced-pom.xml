<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>automan</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.lzlj.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.compile.plugin.version>2.3.2</project.compile.plugin.version>
    <project.resources.plugin.version>2.4.3</project.resources.plugin.version>
    <commons-lang3.version>3.5</commons-lang3.version>
    <maven.compiler.target>8</maven.compiler.target>
    <project.encoding>UTF-8</project.encoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.jdk.version>1.8</project.jdk.version>
    <project.version>1.0</project.version>
    <maven.compiler.source>8</maven.compiler.source>
    <fastjson.version>1.2.23</fastjson.version>
    <spring.version>4.3.2.RELEASE</spring.version>
  </properties>
</project>

